#!/bin/bash

# 获取应用所在目录
APP_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
cd "$APP_DIR"

# 显示启动画面
osascript -e 'display notification "正在启动报告审核工具..." with title "报告审核工具"'

# 启动终端运行应用
osascript <<EOF
tell application "Terminal"
    do script "cd \\"$APP_DIR\\" && npm run dev"
    set windowId to id of front window
    tell window id windowId
        set custom title to "报告审核工具"
    end tell
    activate
end tell
EOF
